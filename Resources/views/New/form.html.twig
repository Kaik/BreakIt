{% form_theme form 'bootstrap_3_layout.html.twig' %}
<div class="container-fluid">
    <div class="row">
        <h1><i class="fa fa-bomb"></i> {{  p.__('Break It! (Form Demo Controller)') }}</h1>
        <div class="alert alert-info">This is a Demo of the Symfony Form component used within Zikula.</div>
        {{ getstatusmsg() }}
        {{ form_start(form) }}
        {{ form_errors(form) }}

        {{ form_row(form.task) }}
        {{ form_row(form.dueDate) }}
        {{ form_widget(form.save, {'attr': {'class': 'btn btn-success'}}) }}
        {{ form_end(form) }}
    </div>
</div>